mixin paginate(url, page, limit, total_count)
  - const total_page = Math.ceil(total_count / limit)
  - const offset = (page - 1) * limit
  ul.pagination
    if (page > 1)
      li.page-item.previous
        a.page-link(href=`${url}?page=${page - 1}`)
          i.previous
    if (page > 3)
      li.page-item
        a.page-link(href=`${url}?page=1`) 1
    if (page > 4)
      li.page-item.disabled
        a.page-link(href='#') ...
    if (page > 2)
      li.page-item
        a.page-link(href=`${url}?page=${page - 2}`) #{page - 2}
    if (page > 1)
      li.page-item
        a.page-link(href=`${url}?page=${page - 1}`) #{page - 1}
    if page != 1
      li.page-item.active
        a.page-link(href='#') #{page}
    if (page < total_page)
      li.page-item
        a.page-link(href=`${url}?page=${page + 1}`) #{page + 1}
    if (page < total_page - 1)
      li.page-item
        a.page-link(href=`${url}?page=${page + 2}`) #{page + 2}
    if (page < total_page - 3)
      li.page-item.disabled
        a.page-link(href='#') ...
    if (page < total_page - 2)
      li.page-item
        a.page-link(href=`${url}?page=${total_page}`) #{total_page}
    if (page < total_page)
      li.page-item.next
        a.page-link(href=`${url}?page=${page + 1}`)
          i.next    
